{% extends 'base.html.twig' %}

{% block body %}
    <h1>Empresa</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ empresa.id }}</td>
            </tr>
            <tr>
                <th>Nit</th>
                <td>{{ empresa.nit }}</td>
            </tr>
            <tr>
                <th>Razonsocial</th>
                <td>{{ empresa.razonSocial }}</td>
            </tr>
            <tr>
                <th>Afiliacion</th>
                <td>{{ empresa.afiliacion }}</td>
            </tr>
            <tr>
                <th>Tipoempresa</th>
                <td>{{ empresa.tipoEmpresa }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ empresa.estado }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('empresa_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('empresa_edit', { 'id': empresa.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
